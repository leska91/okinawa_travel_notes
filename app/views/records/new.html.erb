<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @record, local: true) do |form| %>

    <div class="areaField">
      <%= form.label :area_id, "Area", class: "labelTitle" %>
      <%= form.collection_select(:area_id, Area.all, :id, :name, {}, {class:"areaSelect", id:"area-category"}) %>
    </div>

    <div class="imageField">
      <p>クリックしてファイルをアップロード</p>
      <%= form.file_field :image, id:"item-image" %>
    </div>

    <div class="textField">
      <span>説明</span>
      <%= form.text_area :text, placeholder: "text" %>
    </div>
    <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>