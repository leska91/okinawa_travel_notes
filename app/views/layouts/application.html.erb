<!DOCTYPE html>
<html>
  <head>
    <title>Okinawa Travel Notes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">Okinawa Travel Notes</a></h1>
          <div class="user_nav grid-6">
            <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <%= link_to "マイページ", "/users/#{current_user.id}" %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
            </span>
            <%= link_to "投稿する", new_record_path, class: "post" %>
            <%= link_to "Chatする", rooms_path %>
          </div>
      </div>
    </header>
    <% end %>
    <%= yield %>
    <footer>
      <p>
        Copyright Okinawa Travel Notes 2019.
      </p>
    </footer>
  </body>
</html>